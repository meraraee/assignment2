#include <iostream>
#include <cmath>
using namespace std;

int main(){
    
    
    
    cout << "Welcome! " << endl;
    cout << "Your Yotal Sales: $95,000 " << endl;
    
    double sales = 95000.0;
    double estate = 4.0;     //using double to get accurate amount
    double amount;
    
    amount = (estate/100) * sales; //getting the percentage
    
    
    cout << "Estate Tax: " << amount << endl;
    
    
    double county = 2;
    double amount2;
    
    amount2 = (county/100) * sales;
    
    cout << "County Tax: " << amount2 << endl;
    
    
    
    double total;
    
    total = amount + amount2;
    
    cout << "Total Tax: " << total << "$" << endl; //total tax you have to pay of income(sales)
    
    return 0;
}
